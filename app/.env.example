#--------------------------------------------------------------------
# Example Environment Configuration file
#
# This file can be used as a starting point for your own
# custom .env files, and it has all of the possible settings
# already commented out and ready to go. Thanks for using CodeIgniter!
#
#--------------------------------------------------------------------

# CI_ENVIRONMENT can be set to development, testing or production
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080'
app.forceGlobalSecureRequests = false

# Encryption (leave the first line commented if not needed)
# ENCRYPTION_KEY = 

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = pagamentos
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

# Migrations
database.migrations.table = migrations
database.migrations.add_database = false

#--------------------------------------------------------------------
# CONTENT SECURITY POLICY
#--------------------------------------------------------------------

# contentsecuritypolicy.reportOnly = false
# contentsecuritypolicy.reportURI = null

#--------------------------------------------------------------------
# COOKIE
#--------------------------------------------------------------------

cookie.prefix = ''
cookie.expires = 0
cookie.path = '/'
cookie.domain = ''
cookie.secure = false
cookie.httponly = true
cookie.samesite = 'Lax'

#--------------------------------------------------------------------
# PROXYIPS
#--------------------------------------------------------------------

proxyips = ''

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

security.tokenName = 'csrf_token_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expires = 7200
security.regenerate = true
security.redirect = true
security.percentEncoded = false

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'DatabaseHandler'
session.cookieName = 'ci_session'
session.expiration = 7200
session.savePath = 'ci_sessions'
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4

#--------------------------------------------------------------------
# CURLRequest
#--------------------------------------------------------------------

curlrequest.shareOptions = true

#--------------------------------------------------------------------
# PAYMENT GATEWAYS
#--------------------------------------------------------------------

# Pagar.me
PAGARME_API_KEY = 'seu_api_key_aqui'

# Banco Inter
INTER_CLIENT_ID = 'seu_client_id_aqui'
INTER_CLIENT_SECRET = 'seu_client_secret_aqui'
INTER_CERTIFICATE_PATH = '/caminho/para/certificado.pem'
INTER_CERTIFICATE_PASSWORD = 'sua_senha_aqui'

# C6 Bank
C6_API_KEY = 'seu_api_key_aqui'
C6_API_SECRET = 'seu_api_secret_aqui'

# Bling
BLING_API_KEY = 'seu_api_key_aqui'

#--------------------------------------------------------------------
# EMAIL
#--------------------------------------------------------------------

MAIL_FROM_ADDRESS = 'noreply@seu-dominio.com'
MAIL_FROM_NAME = 'Seu Empresa'
MAIL_HOST = 'smtp.seu-provedor.com'
MAIL_PORT = 587
MAIL_USERNAME = 'seu_usuario'
MAIL_PASSWORD = 'sua_senha'
MAIL_ENCRYPTION = 'tls'

#--------------------------------------------------------------------
# APPLICATION SETTINGS
#--------------------------------------------------------------------

# Timezone
app.timezone = 'America/Sao_Paulo'

# Language
app.language = 'pt-BR'

# Locale
app.locale = 'pt_BR'

# Pagination
pagination.perPage = 20

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

log.threshold = 4
log.dateFormat = 'Y-m-d H:i:s'

#--------------------------------------------------------------------
# WEBHOOKS
#--------------------------------------------------------------------

# Validar assinatura de webhooks
webhook.validateSignature = true

# Tempo m√°ximo de validade de webhook (em segundos)
webhook.maxAge = 300

